<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorMainScreen"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="@string/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/selector_start_button"
            android:textColor="@color/colorWhite"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="96dp"
            android:paddingTop="@dimen/w10" android:paddingBottom="@dimen/w15"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_userName"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/hint_user"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="@dimen/w100"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:textColorHint="@color/colorWhite"
            android:paddingBottom="@dimen/w15" android:textColor="@color/colorWhite"/>
    <EditText

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/w20"
            app:layout_constraintTop_toBottomOf="@+id/et_userName"
            app:layout_constraintHorizontal_bias="0.5"
            android:hint="@string/password"
            android:textColorHint="@color/colorWhite"
            android:paddingBottom="@dimen/w15"
            android:textColor="@color/colorWhite"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/question_logo"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/w150"/>
</androidx.constraintlayout.widget.ConstraintLayout>